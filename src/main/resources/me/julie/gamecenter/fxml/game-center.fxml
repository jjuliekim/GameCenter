<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Scene xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.julie.gamecenter.GameCenterController">
    <AnchorPane prefHeight="600.0" prefWidth="600.0">
      <children>
         <VBox fx:id="mainVBox" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
               <Label text="Choose Game!">
                  <font>
                     <Font name="Britannic Bold" size="36.0" />
                  </font>
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
               </Label>
               <Label fx:id="gameName">
                  <font>
                     <Font size="24.0" />
                  </font>
                  <VBox.margin>
                     <Insets top="50.0" />
                  </VBox.margin>
               </Label>
               <ImageView fx:id="image" fitHeight="350.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </ImageView>
               <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="200.0" spacing="50.0">
                  <children>
                     <Button fx:id="prevButton" mnemonicParsing="false" prefWidth="75.0" text="Previous" />
                     <Button fx:id="playButton" mnemonicParsing="false" text="PLAY" />
                     <Button fx:id="nextButton" mnemonicParsing="false" prefWidth="75.0" text="Next" />
                  </children>
                  <VBox.margin>
                     <Insets top="30.0" />
                  </VBox.margin>
               </HBox>
            </children>
         </VBox>
      </children></AnchorPane>
</Scene>
