<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.julie.gamecenter.GameCenterController">
    <AnchorPane prefHeight="600.0" prefWidth="600.0">
      <children>
         <VBox fx:id="mainVBox" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="600.0">
            <children>
               <Label text="Choose Game!">
                  <font>
                     <Font name="Elephant" size="36.0" />
                  </font>
                  <VBox.margin>
                     <Insets top="5.0" />
                  </VBox.margin>
               </Label>
               <Label fx:id="gameName">
                  <font>
                     <Font size="24.0" />
                  </font>
                  <VBox.margin>
                     <Insets top="50.0" />
                  </VBox.margin>
               </Label>
               <ImageView fx:id="image" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                  <VBox.margin>
                     <Insets top="50.0" />
                  </VBox.margin>
               </ImageView>
               <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="200.0" spacing="50.0">
                  <children>
                     <Button fx:id="prevButton" mnemonicParsing="false" prefWidth="75.0" text="Previous" />
                     <Button fx:id="playButton" mnemonicParsing="false" text="PLAY" />
                     <Button fx:id="nextButton" mnemonicParsing="false" prefWidth="75.0" text="Next" />
                  </children>
                  <VBox.margin>
                     <Insets top="50.0" />
                  </VBox.margin>
               </HBox>
            </children>
         </VBox>
      </children></AnchorPane>
</Scene>
